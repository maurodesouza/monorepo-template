{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
  },
  "exclude": ["node_modules"]
}
